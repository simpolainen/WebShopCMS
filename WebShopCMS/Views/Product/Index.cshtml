@model IEnumerable<WebShopCMS.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <div class="left_content">
        <div class="VerticalMenu">
            <ul class="nav">
                <li class="toggle">Hantera produkter</li>
                <li class="content">
                    <ul>
                        <li class="toggle">@Html.ActionLink(">Skapa produkt", "Create")</li>
                        <li>Test</li>
                        <li>Test</li>
                    </ul>
                </li>
                <li class="toggle">Item</li>
                    <li class="content">
                        <ul>
                            <li>Test</li>
                            <li>Test</li>
                            <li>Test</li>
                        </ul>
                    </li>
                <li>Item</li>

            </ul>
        </div>
    </div>
    <div class="right-content">
        <h3>Produkter</h3>
        <table>
            <tr>
                <td> Artikelnummer</td>
                <td> Produkt Namn</td>
                <td> Pris</td>
                <td> Betyg</td>
                <td> Kategori</td>
                <td> Antal i lager</td>
                <td>I lager</td>
                <td> Information</td>


            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Article_Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product_Price)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.Product_Rating)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.Product_Category)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.Ammount_In_Stock)
                    </td>
                                        <td>
                        @Html.DisplayFor(modelItem => item.In_Stock)
                    </td>
                                                            <td>
                        @Html.DisplayFor(modelItem => item.Product_Information)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductKey }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductKey }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductKey })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
